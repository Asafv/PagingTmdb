<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   android:background="@color/cardview_dark_background"
                                                   tools:context=".screens.details.DetailsPage">


    <ImageView android:id="@+id/detailsPoster"
               android:layout_width="0dp"
               android:layout_height="250dp"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView android:id="@+id/mainPoster"
               android:layout_width="150dp"
               android:layout_height="200dp"
               app:layout_constraintHorizontal_bias="0"
               android:layout_marginStart="16dp"
               app:layout_constraintBottom_toBottomOf="@id/detailsPoster"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toBottomOf="@+id/detailsPoster"/>


    <TextView android:id="@+id/movieTitle"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_marginTop="16dp"
              android:layout_marginEnd="16dp"
              android:layout_marginStart="16dp"
              android:textAlignment="center"
              android:textSize="22sp"
              android:textColor="@color/cardview_light_background"
              android:textAppearance="?attr/textAppearanceHeadline1"
              app:layout_constraintStart_toEndOf="@id/mainPoster"
              app:layout_constraintTop_toBottomOf="@id/detailsPoster"
              app:layout_constraintEnd_toEndOf="parent"/>


    <TextView android:id="@+id/releaseDate"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_marginTop="16dp"
              android:layout_marginEnd="16dp"
              android:layout_marginStart="16dp"
              android:textColor="@color/cardview_light_background"
              android:textAlignment="center"
              app:layout_constraintStart_toEndOf="@+id/mainPoster"
              app:layout_constraintTop_toBottomOf="@id/movieTitle" app:layout_constraintHorizontal_bias="0.5"
              app:layout_constraintEnd_toStartOf="@+id/rate"/>


    <TextView android:id="@+id/rate"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_marginTop="16dp"
              android:layout_marginEnd="16dp"
              android:layout_marginStart="8dp"
              android:textColor="@color/cardview_light_background"
              android:textAlignment="center"
              app:layout_constraintTop_toBottomOf="@id/movieTitle"
              app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toEndOf="@+id/releaseDate"
              app:layout_constraintHorizontal_bias="0.5"/>


    <TextView android:id="@+id/overview"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_marginTop="16dp"
              android:textColor="@color/cardview_light_background"
              android:textAlignment="center"
              app:layout_constraintTop_toBottomOf="@id/mainPoster"
              app:layout_constraintEnd_toEndOf="@id/rate"
              app:layout_constraintStart_toStartOf="@id/mainPoster"/>

</androidx.constraintlayout.widget.ConstraintLayout>